      

      <% if logged_in? %>
      <div class="ui grid">
        <div class="sixteen wide column loggedIn">
          <a class="active item">
            <%= image_tag("median-logo3.png", class:"medianLogoNav") %>
          </a>
          <%= link_to "Home", users_path(), :class=>"active item" %>
          <%= link_to "Profile", user_path(session[:user_id]), :class=>"active item"%>
          <%= link_to "Signout", logout_path, method: :delete, :class=>"active item" %>
          
        </div>
        
      </div>

    <% end  %>
      
    <!--   add flash messages -->


    <% flash.each do |key, value| %>
    <% if key == "notice" %>
    <%= content_tag :div, value, class: "text-center alert alert-warning" %>
    <% elsif key == "alert" %>
    <%= content_tag :div, value, class: "text-center alert alert-danger" %>
    <% else %>
    <%= content_tag :div, value, class: "text-center alert alert-success" %>
    <% end %>
    <% end %>


<% if logged_in? %>
<div class="ui inverted secondary top attached menu loggedIn">
  <a class="item">
    <%= image_tag("median-logo3.png", class:"ui tiny image") %>
  </a>
    <%= link_to "Home", users_path(), :class=>"item" %>
    <%= link_to "Profile", user_path(session[:user_id]), :class=>"item"%>
  <div class="right menu">
    <div class="item">
       <%= image_tag @current_user.img_url, :class => "ui avatar image" %>    
    </div>
    <%= link_to "Signout", logout_path, method: :delete, :class=>"item" %>
    </div>

<% end  %>
</div>

      
    <!--   add flash messages -->

  

    <% flash.each do |key, value| %>
    <% if key == "notice" %>

    <%= content_tag :div, value, class: "ui top attached warning message" %>
    <% elsif key == "alert" %>
    <%= content_tag :div, value, class: "ui top attached message" %>
    <% else %>
    <%= content_tag :div, value, class: "ui top attached message" %>
    <% end %>

    <% end %>



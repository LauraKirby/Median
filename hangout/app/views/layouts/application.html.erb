<!DOCTYPE html>
<html>
<head>
  <title>Hangout</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.20&signed_in=true"></script>
  <%= csrf_meta_tags %>
</head>
<body>
<%= link_to "Sign Out", logout_path, method: :delete %>
  <div class="main container">
    <% flash.each do |key, value| %>
      <% if key == "notice" %>
        <%= content_tag :div, value, class: "text-center alert alert-warning" %>
      <% elsif key == "alert" %>
        <%= content_tag :div, value, class: "text-center alert alert-danger" %>
      <% else %>
        <%= content_tag :div, value, class: "text-center alert alert-success" %>
      <% end %>
    <% end %>
    <%= yield %>


  </div>

</body>
</html>
